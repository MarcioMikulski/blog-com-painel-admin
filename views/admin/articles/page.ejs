<body>

<div class="container">
    <hr>
    

    <% result.articles.rows.forEach(article => { %> 
      <div class="card">
        <div class="card-header">
            <h3><%= article.title %></h3>
        </div>

        <div class="card-body">
           <a class="btn btn-primary" href="<%= article.slug %>">Ler artigo</a>

        </div>
      </div>
<br>
<% }) %>

<div class="row">
    <div class="col col-12">
        <% if(result.next){ %>
            <a style="float: right;" href="/articles/page/<%=  result.page + 1 %>">Next >>>>></a>
        
      <%  } %>

      <% if(result.next !=  result.page){ %>
        <a style="float: left;" href="/articles/page/<%=  result.page - 1 %>">  <<<<<< Prev</a>
    
  <%  } %>
  
    </div>
 

   
  <hr>
  </div>
  <hr>
    


</div>

</body>
